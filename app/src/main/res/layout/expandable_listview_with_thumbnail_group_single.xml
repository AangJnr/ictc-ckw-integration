<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:padding="20dp" android:layout_gravity="center_vertical"
        android:gravity="center_vertical" android:background="@drawable/card_bakground_selector"
        android:weightSum="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thumbnail" android:src="@mipmap/farmer_budget"
            android:layout_weight="1" />
        <applab.client.agrihub.ui.font.RobotoTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            app:typeface="robotoLight"
            android:id="@+id/text" android:paddingLeft="5dp"
            android:layout_weight="3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@mipmap/ic_down_arrow_dark"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>