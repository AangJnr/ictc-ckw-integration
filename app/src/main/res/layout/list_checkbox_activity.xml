<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dip"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/card_bakground_selector"
    android:gravity="center_vertical">

<CheckBox
        android:id="@+id/lst_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text=""
        android:clickable="true"
        android:focusable="false"/>

    <ImageView
            android:id="@+id/lst_farmer_initial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lst_chk"
            android:layout_toRightOf="@+id/lst_chk"
            android:layout_alignTop="@+id/lst_chk"
            android:src="@mipmap/ic_person"
           />
    <applab.client.agrihub.ui.font.RobotoTextView
        android:id="@+id/lst_farmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lst_farmer_initial"
        android:layout_toRightOf="@+id/lst_farmer_initial"
        android:text=""
        android:layout_alignTop="@+id/lst_farmer_initial"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        app:typeface="robotoLight"
        android:textSize="17dp" />

</RelativeLayout>