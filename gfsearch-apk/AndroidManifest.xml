<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="2" android:versionName="1.1.0-SNAPSHOT" package="org.grameenfoundation.search">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:debuggable="true" android:icon="@drawable/mobile_app_icon" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:launchMode="singleTop" android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:icon="@drawable/action_settings" android:name=".settings.SettingsActivity" android:parentActivityName="org.grameenfoundation.search.MainActivity">
            <intent-filter>
                <action android:name="org.grameenfoundation.search.settings.SettingsActivity"/>
                <category android:name="android.intent.category.PREFERENCE"/>
            </intent-filter>

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.grameenfoundation.search.MainActivity"/>
        </activity>
        <activity android:icon="@drawable/action_about" android:name=".ui.AboutActivity" android:parentActivityName="org.grameenfoundation.search.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.grameenfoundation.search.MainActivity"/>
        </activity>
        <activity android:icon="@drawable/collections_view_as_list" android:name=".ui.SearchMenuItemActivity" android:parentActivityName="org.grameenfoundation.search.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.grameenfoundation.search.MainActivity"/>
        </activity>
        <service android:name=".synchronization.BackgroundSynchronizationService"/>
    </application>

    <!-- Application Permissions-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>