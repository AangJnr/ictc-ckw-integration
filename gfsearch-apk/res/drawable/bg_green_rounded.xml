<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#ff006400" />
            <gradient android:angle="-90" android:startColor="#ff006400" android:endColor="#ff006400" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#ffa3cb82" />
            <solid android:color="#ffa3cb82"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#ffa3cb82" />
            <gradient android:angle="-90" android:startColor="#ff006400" android:endColor="#ff006400" />
        </shape>
    </item>
</selector>