<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/bg" android:padding="20dp"
        android:dividerPadding="10dp"
        >
<LinearLayout
        android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:dividerPadding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp" android:background="@drawable/bg_weather" android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Techiman"
                android:id="@+id/textView10" android:textColor="#ffffffff" android:textStyle="bold|italic"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:padding="10dp" android:gravity="center_vertical">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView12" android:src="@drawable/ic_cloudy"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="26 Â°C"
                        android:id="@+id/textView13" android:textSize="60dp" android:textColor="#ffffffff"
                        android:paddingLeft="70dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Mostly cloudy"
                        android:id="@+id/textView18" android:textColor="#ffffffff" android:textStyle="bold|italic"
                        android:paddingLeft="20dp" android:textSize="17dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="10dp"></View>
    <ViewStub
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewStub" android:layout_gravity="right"/>
    <View android:layout_width="match_parent" android:layout_height="10dp"></View>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:numColumns="2" android:verticalSpacing="30dp" >
        <LinearLayout
                android:background="@drawable/bg_edittext"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_columnSpan="2" android:id="@+id/fd">
            <TextView
                    android:text=" Prices for maize in Ejura: 200
                                         Prices for maize in Fankyenebra: 300
                                         Prices for Rice in Kintampo: 350
                                         Prices for Rice in Ejura: 200
                                         Prices for Beans in Ejura: 200
                                         Prices for Rice in Fankyenebra: 300
                                         Prices for maize in Fankyenebra: 300
                                         Prices for Rice in Fankyenebra: 300   "
                    android:id="@+id/MarqueeText"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="false"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:drawableLeft="@drawable/ic_star"
                    android:textColor="#ffffffff"
                    android:textStyle="bold|italic" android:gravity="center_vertical" android:paddingBottom="20dp"/>
        </LinearLayout>
    </GridLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="10dp">
    </LinearLayout>
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="784dp"
            android:id="@+id/gridView" android:numColumns="2" android:verticalSpacing="30dp"
            android:horizontalSpacing="30dp"/>


</LinearLayout>

</ScrollView>