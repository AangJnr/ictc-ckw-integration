<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/bg" android:padding="20dp"
        android:dividerPadding="10dp"
        >
<LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="4"
              android:dividerPadding="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:background="@drawable/bg_weather"
            android:gravity="center" android:id="@+id/vid">

        <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/weather_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"></View>
    <ViewStub
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewStub"
            android:layout_gravity="right"/>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"></View>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:verticalSpacing="30dp" >
        <LinearLayout
                android:background="@drawable/bg_edittext"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:id="@+id/fd">
            <TextView
                    android:text=" Prices for maize in Ejura: 200
                                         Prices for maize in Fankyenebra: 300
                                         Prices for Rice in Kintampo: 350
                                         Prices for Rice in Ejura: 200
                                         Prices for Beans in Ejura: 200
                                         Prices for Rice in Fankyenebra: 300
                                         Prices for maize in Fankyenebra: 300
                                         Prices for Rice in Fankyenebra: 300   "
                    android:id="@+id/MarqueeText"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="false"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:drawableLeft="@drawable/ic_star"
                    android:textColor="#ffffffff"
                    android:textStyle="bold|italic"
                    android:gravity="center_vertical"
                     android:paddingBottom="20dp"/>
        </LinearLayout>
    </GridLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:weightSum="2">
                <LinearLayout
                              android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent" android:gravity="center"
                              android:background="@drawable/bg_edittext" android:layout_weight="1"
                              android:id="@+id/clients">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_clients" android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff006400"
                            android:text=""/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="#ffffffff" android:gravity="center_vertical|end"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Farmers"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#ff166520"
                                android:textStyle="bold" android:id="@+id/fm"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                        android:layout_width="5px"
                        android:layout_height="match_parent"
                        />
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center"
                        android:background="@drawable/bg_edittext" android:layout_weight="1" android:id="@+id/meetings">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_meetings" android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff006400"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="#ffffffff" android:gravity="center_vertical|end"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Meetings"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#ff166520"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:weightSum="2" android:paddingTop="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center"
                        android:background="@drawable/bg_edittext" android:layout_weight="1" android:id="@+id/suppliers">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_suppliers" android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff006400"
                            android:text=""/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="#ffffffff" android:gravity="center_vertical|end"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Suppliers"

                                android:layout_gravity="center_horizontal"
                                android:textColor="#ff166520"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <Space
                        android:layout_width="20px"
                        android:layout_height="match_parent"
                        />
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center"
                        android:background="@drawable/bg_edittext" android:layout_weight="1" android:id="@+id/markets">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_markets" android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff006400"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="#ffffffff" android:gravity="center_vertical|end"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Markets"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#ff166520"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:weightSum="1" android:paddingTop="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center"
                        android:background="@drawable/bg_edittext" android:layout_weight="1"
                        android:id="@+id/technical">

                    <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_technical"
                            android:layout_marginTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff006400"
                            android:text=""/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="#ffffffff" android:gravity="center_vertical|end"
                            >
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Technical Assistance"
                                android:id="@+id/textView_title"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#ff166520"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

            </TableRow>
        </TableLayout>
        <GridView
                android:layout_width="wrap_content"
                android:layout_height="740dp"
                android:id="@+id/gridView"
                android:numColumns="2"
                android:verticalSpacing="30dp"
                android:horizontalSpacing="30dp" android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>