<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   android:minHeight="2350dp"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView_fmp_name"
                android:layout_gravity="center_horizontal"/>
        <ViewStub
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="right"/>
        <View android:layout_width="300dp"
              android:layout_height="5dp"
              android:background="#ff0d481b"
                ></View>
       <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:visibility="gone">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map Farm"
                    android:id="@+id/button2"
                    android:drawableLeft="@drawable/ic_location" android:onClick="mapFarm"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Technical Assistance"
                    android:id="@+id/ckw_profile_btn" android:drawableLeft="@drawable/app_logo" android:onClick="ckwClick"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:paddingTop="30dp" >
            <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_fmp" android:layout_gravity="center_horizontal"/>
            <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/lst_fmp_item"

                    />
        </LinearLayout>


    </LinearLayout>