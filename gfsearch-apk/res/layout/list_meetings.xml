<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dip" >

    <TextView
            android:id="@+id/list_view_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:text=" Jun    "
            android:textColor="#fff9fbff" android:background="#ff596aff"/>
    <TextView
        android:id="@+id/list_event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 , 15"
        android:layout_below="@+id/list_view_month"
        android:layout_alignParentRight="true"/>

    <TextView
            android:id="@+id/list_event_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_view_month"
            android:layout_toRightOf="@+id/list_view_month"
            android:paddingLeft="8dp"
            android:text="Efg"
            android:layout_alignTop="@+id/list_view_month" android:layout_alignParentRight="true"/>


</RelativeLayout>