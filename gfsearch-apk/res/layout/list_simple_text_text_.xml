<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dip"
                android:id="@+id/simp_rel_lay">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:padding="5dp"
            android:weightSum="4" android:gravity="center_vertical" android:clickable="false"
            android:background="@drawable/card_bakground_selector">
        <TextView
                android:id="@+id/lst_text_item_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:text="1"
                android:textSize="20dp"
                android:textColor="#fff9fbff"
                android:background="@drawable/text_icon_design"
                android:gravity="center"/>
        <TextView
                android:id="@+id/lst_text_item_titles"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lst_text_item_icon"
                android:layout_toRightOf="@+id/lst_text_item_icon"
                android:padding="5dp"
                android:text="Efg"
                android:textSize="20dp"
                android:layout_alignTop="@+id/lst_text_item_icon"
                android:layout_alignParentRight="true" android:textColor="#ff02070c"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>