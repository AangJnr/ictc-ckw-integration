<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:gravity="center" android:id="@+id/ccs_layout"
              android:clickable="false">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" android:clickable="false" android:background="@drawable/card_bakground_selector">
        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical" android:paddingTop="3dp" android:paddingBottom="12dp">
            <applab.client.search.utils.CircularImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:id="@+id/farmerImg"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#8BC34A"
                    android:src="@drawable/ic_person"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/textView_name"
                            android:textColor="#ff0e4918"
                            android:textStyle="bold|italic"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3" android:clickable="false" android:id="@+id/vsis">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                 android:paddingBottom="10dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:drawableLeft="@drawable/ic_location"
                                    android:text=" Location: "
                                    android:id="@+id/textView12" android:textColor="#ff0e4918" android:textStyle="bold"
                                    android:paddingLeft="0dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/textView_location" android:textStyle="italic"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Groups: "
                                    android:drawableLeft="@drawable/ic_groups"
                                    android:id="@+id/textView11" android:textStyle="bold" android:textColor="#ff0e4918"
                                    android:paddingLeft="0dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/textView_groups" android:textStyle="italic"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:id="@+id/textView_mainCrop"
                    android:textStyle="italic" android:paddingLeft="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>