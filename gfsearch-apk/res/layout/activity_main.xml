<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/farming">
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="20dp">

        <ImageView
                android:layout_width="700dp"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:src="@drawable/smartex" android:layout_alignParentTop="true"
                android:layout_marginTop="96dp" android:layout_alignParentRight="true"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/imageView"
                android:gravity="center" android:layout_centerVertical="true" android:background="@drawable/bg_edittext"
                android:padding="2dp" android:id="@+id/linearLayout3">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/text_log_error"
                    android:textColor="#f900" android:textSize="17dp"

                    android:typeface="monospace" android:visibility="gone" android:background="#ffffffff"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:id="@+id/textView" android:textSize="40dp"
                    android:textColor="#ffffffff"
                    android:typeface="monospace" android:visibility="gone"/>
            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:padding="10dp">
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:dividerPadding="10dp" android:paddingBottom="10dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username:"
                            android:id="@+id/textView2"
                            android:textColor="#ffffffff"
                            android:textSize="17dp" android:paddingRight="50dp" android:textStyle="bold"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/edit_us_name"
                            android:background="@drawable/bg_edittext" android:textColor="#ffffffff"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:paddingBottom="40dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password:"
                            android:id="@+id/user_nm" android:textColor="#ffffffff" android:textSize="17dp"
                            android:textStyle="bold"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/user_pwd"
                            android:background="@drawable/bg_edittext" android:textColor="#ffffffff"/>
                </TableRow>
            </TableLayout>
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:id="@+id/main_button_login"
                    android:background="#ffffffff"
                    android:textSize="19dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pass_response" android:layout_above="@+id/linearLayout3"
                android:layout_centerHorizontal="true" android:textColor="#ffff2804"/>
    </RelativeLayout>
</ScrollView>