<resources>
    <style name="Theme.Ictc" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ictc</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ictc</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ictc</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ictc</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ictc</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ictc</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ictc</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ictc</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ictc</item>


    </style>

    <style name="ActionBar.Solid.Ictc" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_ictc</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ictc</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_ictc</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ictc</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBar.Transparent.Ictc" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ictc</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ictc</item>
    </style>

    <style name="PopupMenu.Ictc" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ictc</item>
    </style>

    <style name="DropDownListView.Ictc" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ictc</item>
    </style>

    <style name="ActionBarTabStyle.Ictc" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ictc</item>
    </style>

    <style name="DropDownNav.Ictc" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_ictc</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ictc</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ictc</item>
    </style>

    <style name="ProgressBar.Ictc" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ictc</item>
    </style>

    <style name="ActionButton.CloseMode.Ictc" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ictc</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ictc.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ictc</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ictc</item>
    </style>
    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:paddingRight">4dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/material_grey_200</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
    <!-- ListView related themes end here -->

    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColor">@color/material_grey_300</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>
    <!-- Ripple related styles end here -->
    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/apptheme_color</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>-->
</resources>
